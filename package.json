{
  "name": "hit-dice-app-client",
  "version": "0.1.0",
  "description": "An app for generating a range of Hit Point values from Dungeons & Dragons Hit Dice expressions",
  "author": "Christopher Miles <mail@christophermiles.com.au> (http://christophermiles.com.au)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
